<div id="kurakani_teritory">
  <%= stylesheet_link_tag    "kurakani/application" %>
  <%= javascript_include_tag "kurakani/comments" %>

  <% if kurakani_current_user %>
    <div id="comment_form">
      <h2>New Comment</h2>
      <%= form_for(Kurakani::Comment.new, :url => kurakani.comments_path) do |f| -%>
        <%= hidden_field_tag :commentable_id, commentable.id %>
        <%= hidden_field_tag :commentable_type, commentable.class %>
        <p><%= f.label :content, "Your comment" %><br />
        <%= f.text_area :content, :rows => 8 %></p>
        <p><%= f.submit "Create", :disable_with => 'Creating...' %></p>
      <% end -%>
    </div>
  <% else %>
    <div id="login_to_comment"><%= link_to "Login to comment", kurakani_login_url %></div>
  <% end %>

  <% if comments.present? %>
    <h2 id="comment_header">Comments</h2>
    <ol id="kurakani_comments">
      <%= render :partial => "kurakani/comments/comment", :collection => comments %>
    </div>
  <% end %>
</div>